<div class="body_wrap">
  <div class="middle middle_white cols2 blog">
    <div class="container">

      <div class="content">

        <!-- Post List -->
        <div class="postlist">
            <%= render @posts %>
            <br>
            <%= paginate @posts %>
        </div>
        <!-- Post List -->

      </div>
      <!--/ content -->

      <!-- sidebar -->
      <div class="sidebar">

        <!-- recent entries -->
        <div class="widget-container widget_recent_entries">
          <h3 class="widget-title">Latest Stories</h3>

          <ul>
            <% recent_post(5).each do |post| %>
                <li>
                  <%= link_to (image_tag post.thumb, :class => 'thumb'), post_path(post.id) %>
                  <div class="recent_entry"><%= link_to post.title, post_path(post.id), :class => 'link-name'  %></div>
                  <div class="recent_entry_short"><%= truncate_html(post.body, length: 30) %></div>
                </li>
            <% end %>
          </ul>

          <div class="hover-search">
            <a href="#" class="btn-search">SEARCH THIS PAGE <span class="icon-stack"><i class="icon-circle-blank icon-stack-base"></i><i class="icon-search"></i></span></a>
            <form method="get" id="searchform5" action="#" class="clearfix">
              <input class="inputField" name="s" id="s" value="" placeholder="Search this page" type="text">
              <button type="submit" class="btn-form"><span class="icon icon-search"></span></button>
            </form>
          </div>

        </div>
        <!--/ recent entries -->

      </div>
      <!--/ sidebar -->

    </div>
  </div>
  <!--/ middle -->

</div>