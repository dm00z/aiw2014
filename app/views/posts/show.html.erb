<% provide(:title, @post.title) %>
<div class="body_wrap">

<div class="middle middle_white cols2 blog">
  <div class="container">

    <div class="content">

      <!-- Post List -->
<article class="postlist post-detail">

  <div class="post-item clearfix">
    <div class="post-image"><%= image_tag @post.image %></div>
    <div class="post-title">
      <h2><%= @post.title %></h2>
    </div>
    <div class="post-meta-top">
      <div class="post-meta-cats">Posted in <%= @post.created_at.strftime("%b %d, %Y") %></div>>

    </div>
    <div class="post-descr entry">
      <%= @post.body.html_safe %>
    </div>
    <div class="post-meta-bot">
      <span class="post-author">Written by: <span><%= @post.written_by %></span></span>
    </div>
  </div>

</article>

    </div>
    <!--/ content -->

    <!-- sidebar -->
    <div class="sidebar">

      <!-- recent entries -->
      <div class="widget-container widget_recent_entries">
        <h3 class="widget-title">Latest Stories</h3>

        <ul>
          <% recent_post(5).each do |post| %>
              <li>
                <%= link_to (image_tag post.thumb, :class => 'thumb'), post_path(post.id) %>
                <div class="recent_entry"><%= link_to post.title, post_path(post.id), :class => 'link-name'  %></div>
                <div class="recent_entry_short"><%= truncate_html(post.body, length: 30) %></div>
              </li>
          <% end %>
        </ul>

        <div class="hover-search">
          <a href="#" class="btn-search">SEARCH<span class="icon-stack"><i class="icon-circle-blank icon-stack-base"></i><i class="icon-search"></i></span></a>
          <%= form_tag posts_path, :method => 'get', :id => 'searchform5', :class => 'clearfix' do %>
              <%= text_field_tag :search, params[:search], :class => 'inputField', :placeholder => 'Search Posts', :type => 'text' %>
              <%= button_tag content_tag(:span, '', class: 'icon icon-search'), :name => nil, :class => 'btn-form' %>
          <% end %>
        </div>

      </div>
      <!--/ recent entries -->




    </div>
    <!--/ sidebar -->

  </div>
</div>
<!--/ middle -->

</div>